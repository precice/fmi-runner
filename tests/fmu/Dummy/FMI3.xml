    <Float64 name="write_data" valueReference="2" causality="parameter" variability="tunable" initial="exact" start="0"  description="Write data, which is obtained as write_data = read_data + increment"/>
    <Float64 name="increment" valueReference="3" causality="parameter" variability="fixed" initial="exact" start="1"  description="The increment added during every time step"/>
  </ModelVariables>
  
  <ModelStructure>
    <Output valueReference="2"/>
  </ModelStructure>

</fmiModelDescription>
